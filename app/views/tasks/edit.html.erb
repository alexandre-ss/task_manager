<h1 class = "text-center"> Edit Task</h1>
<div class = "container d-flex">
  <div class = "row mx-auto">
    <div class = "card">
      <div class="card-body text-center">
        <%= form_for( @task , remote: true) do |f| %>
          <div class = "form-group">
            <%= f.label :title, "Task Title"%>
            <%= f.text_field :title, placeholder: "Task Title", class: "form-control" %>
          </div>

          <div class = "form-group">
            <%= f.label :description, "Description"%>
            <%= f.text_area :description, placeholder: "task description", class: "form-control" %>
          </div>

          <div>
            <%= f.label :share, "Change Privacy:"%>
            <%= f.select :share, options_for_select([["Public",true], ["Private", false]], @task.share),{}, class: "custom-select mb-2" %>
          </div>

          <div>
            <%= f.label :priority, "Priority"%>
            <%= f.select :priority, options_for_select(Task.priorities.map { |key, value| [key.humanize, key] }),{}, placeholder: "task title", class: "custom-select mb-2" %>
          </div>
          
          <%= f.hidden_field :user_id, value: current_user.id %> 
          <%= f.submit "Update Task", class: "btn btn-secondary"%>
        <% end %>            
      </div>
    </div>
  </div>
</div>